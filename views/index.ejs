   </head>
   <body>

   <!--start container-->
   <div id="container">

   <!--start header-->
   <header>

   <!--start logo-->
   <a href="/" id="logo"><img src="images/logo.png" width="221" height="84" alt="logo"/></a>    
   <!--end logo-->

   <!--start menu-->
   <nav>
   <div class="button black">
     <% if (!user) { %>
   <a href="/register">Create an account</a>
   <% } else { %>
   <a href="/logout">logout</a>
   <% } %>
   </div>
  </nav>  
 <!--end menu-->

   <!--end header-->
   </header>

   <!--start intro-->

   <div id="intro">
   <img src="images/home.jpg"  alt="baner" align="right">
   </div>
   <!--end intro-->

   <header class="group_bannner_left">
   <hgroup>
   <h1>We track device status</h1>
   <h2>Register new device, validate device. Certify new device. track device accessories and shippment. 
   </h2>
   </hgroup>
   </header>

   <!--start holder-->
  <div class="holder_content">
   <section class="group1">
   <h3>Services</h3>
   <article class="holder_gallery">
   <a class="photo_hover2" href="#"><img src="/images/register.jpg" width="75"/></a>
   <h2>Register new device</h2>
   </article>
    
   <article class="holder_gallery">
   <a class="photo_hover2" href="#"><img src="/images/register.jpg" width="75"/></a>
   <h2>Certify device</h2>
   </article>

   <article class="holder_gallery">
   <a class="photo_hover2" href="#"><img src="/images/register.jpg" width="75"/></a>
   <h2>Validate new device OS</h2>
   </article>
   </section>

   <aside class="group2">
   <div id="bodyPannel">
  <% if (!user) { %>
   <h3>Members area</h3>
  <!-- login form start-->
  <% if (message) { %>
<p><%= message %></p>
<% } %>
  
   <form method="post" action="/login" name="login" id="login" class="search">
     <label>email</label><input name="username" type="text" id="username" />
     <label>password</label><input name="password" type="password" id="password" />
     <input name="login" type="submit" id="login" value="login" title="Login" class="submit"/>
   </form>
      <script>
 var frmvalidator = new Validator("login");
 frmvalidator.addValidation("username","maxlen=50");
 frmvalidator.addValidation("username","req");
 frmvalidator.addValidation("username","email");
 frmvalidator.addValidation("password","req");
 </script>
   <% }%>
   <!-- login form end-->
   </div>
   </aside>
</div>
   <!--end holder-->

   </div>
   <!--end container-->

   <!--start footer-->
   <footer>
